modules = ["bash", "nodejs-20", "postgresql-16"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Web Server"

[[workflows.workflow]]
name = "Expo Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd funlynk-app && npx expo start --web --port 5000 --host lan"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34463
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["cd", "funlynk-app", "&&", "npx", "serve", "dist", "-s", "-l"]
build = ["cd", "funlynk-app", "&&", "npx", "expo", "export", "-p", "web"]
